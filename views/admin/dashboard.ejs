<%- include("../layouts/header.ejs") %>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container">
      <h1 style="padding: 6px 10px 0px 0px; font-size: 25px;">Admin panel</h1>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        </ul>
        <form class="d-flex" role="search">
            <a class="btn btn-primary" style="margin-right: 10px;" href="/admin" >Go to admin</a>
            <a class="btn btn-danger" href="/admin/logout" role="button">logout</a>
        </form>
      </div>
    </div>
  </nav>

<section class="vh-100">
    <div class="container py-5 h-100">
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm mt-4" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th class="th-sm">Name
                </th>
                <th class="th-sm">Email
                </th>
                <th class="th-sm">Mobile
                </th>
                <th class="th-sm">Action
                </th>
            </tr>
            </thead>

            <tbody>

           <%
                if(users.length > 0){

                    for(let i=0; i<users.length; i++){
                        %>

                        <tr>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].mobile %></td>
                   
                            <td>
                                <a href="/admin/edit-user?id=<%= users[i]._id %>" class="btn btn-outline-success">Edit</a>
                                <a href="/admin/delete-user?id=<%= users[i]._id %>" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    <%
                    }

                }
                else{
                    %>
                        <tr>
                            <td colspan="5">Users Not found</td>
                        </tr>
                    <% } %>

            </tbody>
            
        </table>
    </div>
</section>

<%- include("../layouts/footer.ejs") %>


